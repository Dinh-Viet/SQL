@model exam.Models.DepartmentModel

<h2>Create Department</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DepartmentCode"></label>
        <input asp-for="DepartmentCode" class="form-control" />
        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
    </div>
    <!-- Add similar form fields for other properties -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
